   <!-- progess bar -->
   <style>
      #progressBar {
      width: 100%;
      height: 18px;
      border: 0.5px solid #111;
      background-color: white;
      }
      #progressBar div {
      height: 100%;
      color: #fff;
      text-align: right;
      line-height: 22px; /* same as #progressBar height if we want text middle aligned */
      width: 0;
      background-color: #A4A4A4;
      }
   </style>
   <script>
      function progress(percent, $element) {
          var progressBarWidth = percent * $element.width() / 100;
          $element.find('div').animate({ width: progressBarWidth }, 1500).html(percent + "% ");
      }
   </script>
   <!-- scroll div -->
   <style>
      .scrollup {
      width: 40px;
      height: 40px;
      position: fixed;
      bottom: 30px;
      right: 60px;
      display: none;
      text-indent: -9999px;
      background: url("{!URLFOR($Resource.nuHome, '/img/arrow60.png')}") no-repeat;
      background-size : 40px 40px;
      }
   </style>
   <script>
      $(document).ready(function () {
          var perc = {!Door_Tag_Script__c.Completed_Percentage__c}
          progress(perc, $('#progressBar'));
          $(window).scroll(function () {
              if ($(this).scrollTop() > 100) {
                  $('.scrollup').fadeIn();
              } else {
                  $('.scrollup').fadeOut();
              }
          });
          
          $('.scrollup').click(function () {
              $("html, body").animate({
                  scrollTop: 0
              }, 1000);
              return false;
          });
      });
   </script>
